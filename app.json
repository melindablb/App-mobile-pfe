{
  "expo": {
    "name": "E-Mergency",
    "slug": "EMergency",
    "version": "1.0.0",
    "orientation": "portrait",
    "icon": "./assets/icons/logoapp.png",
    "scheme": "myapp",
    "userInterfaceStyle": "automatic",
    "newArchEnabled": true,
    "ios": {
      "supportsTablet": true
    },
    "android": {
      "adaptiveIcon": {
        "foregroundImage": "./assets/icons/logoapp.png",
        "backgroundColor": "#ffffff"
      },
      "softwareKeyboardLayoutMode": "pan"
    },
    "extra": {
      "fontAssets": {
        "Montserrat-SemiBold": "./assets/fonts/Montserrat/static/Montserrat-SemiBold.ttf",
        "Montserrat-Thin": "./assets/fonts/Montserrat/static/Montserrat-Thin.ttf"
      }
    },
    "web": {
      "bundler": "metro",
      "output": "static",
      "favicon": "./assets/images/favicon.png"
    },
    "plugins": [
      "expo-router",
      [
        "expo-splash-screen",
        {
          "image": "./assets/images/splashscreen.png",
          "imageWidth": "100%",
          "resizeMode": "contain",
          "backgroundColor": "#F05050",
          "enableFullScreenImage_legacy": true
        }
      ],
    [
      "expo-font",
      {
        "fonts" :[
          "./assets/fonts/Montserrat/static/Montserrat-SemiBold.ttf",
          "./assets/fonts/Montserrat/static/Montserrat-Thin.ttf"
        ]
      }
    ]
  ],
    "experiments": {
      "typedRoutes": true
    }
  }
}
